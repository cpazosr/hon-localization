<launch>
    <include file="$(find turtlebot_simulation)/launch/kobuki_basic.launch">
        <arg name="robot_name" value="turtlebot"/>
        <arg name="simulation_data" value="$(find turtlebot_simulation)/resources"/>
        <arg name="scenario_description" value="$(find turtlebot_simulation)/scenarios/pr_world.scn"/>
        <arg name="simulation_rate" value="300.0"/>
        <arg name="graphics_resolution" value="1200 800"/>
        <arg name="graphics_quality" value="high"/>
    </include>

    <node pkg="kobuki_node" type="beacons2marker.py" name="beacons2_marker" output="screen"/>
    <node pkg="tf" type="static_transform_publisher" name="beacons2_marker_tf" args="0 0 0 0 0 0 world world_ned 100"/>
</launch>
